<!DOCTYPE html>
<html>
<head>
  <title>中钞国鼎后台</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= render "basic_css" %>
  <%= stylesheet_link_tag 'admin', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default navbar-static-top" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/admin">中钞国鼎后台</a>
      </div>
      <div id="navbar" class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <li <% if current_page?(controller: 'categories') %>class="active"<% end %>>
            <%= link_to "商品类别管理", admin_categories_path %>
          </li>
          <li <% if current_page?(controller: 'products') %>class="active"<% end %>>
            <%= link_to "商品管理", admin_products_path %>
          </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if current_staffer and staffer_signed_in? %>
          <li><%= link_to '退出', destroy_staffer_session_path, method: :delete, class: "btn" %></li>
          <% else %>
          <li><%= link_to '登录', new_staffer_session_path %> </li>
          <li><%= link_to '注册', new_staffer_registration_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
  <div class="container">
    <%= yield %>
  </div>
  <%= yield :script %>
</body>
</html>
