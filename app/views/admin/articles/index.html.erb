<div class="row">
  <div class="col-xs-3"></div>
  <div class="col-xs-6"><h3 class="text-center">文章管理</h3></div>
  <div class="col-xs-3">
    <%= link_to '添加', new_admin_article_path, class: 'pull-right btn btn-warning', style: "margin-top: 10px;" %>
  </div>
  <div class="col-xs-12">
    <% if @articles.present? %>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>缩略图</th>
          <th>标题</th>
          <th>内容</th>
          <th>操作</th>
        </tr>
      </thead>
      <tbody>
        <% @articles.each do |article| %>
        <tr>
          <td><%= image_tag article.cover_url(:thumb) %></td>
          <td><%= article.title %></td>
          <td><%= article.content %></td>
          <td>
            <%= link_to '编辑', edit_admin_article_path(article), class: "btn btn-default" %>
            <%= link_to '删除', admin_article_path(article), method: :delete, data: { confirm: '确定删除吗?' }, class: "btn btn-danger" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate @articles %>
    <% else %>
    <div>
      暂无内容
    </div>
    <% end %>
  </div>
</div>