<div class="row">
  <div class="col-xs-3"></div>
  <div class="col-xs-6"><h3 class="text-center">头图管理</h3></div>
  <div class="col-xs-3">
    <%= link_to '添加', new_admin_banner_path, class: 'pull-right btn btn-warning', style: "margin-top: 10px;" %>
  </div>
  <div class="col-xs-12">
    <% if @banners.present? %>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>缩略图</th>
          <th>链接</th>
          <th>操作</th>
        </tr>
      </thead>
      <tbody>
        <% @banners.each do |banner| %>
        <tr>
          <td><%= image_tag banner.image_url(:thumb) %></td>
          <td><%= banner.url %></td>
          <td>
            <%= link_to '编辑', edit_admin_banner_path(banner), class: "btn btn-default" %>
            <%= link_to '删除', admin_banner_path(banner), method: :delete, data: { confirm: '确定删除吗?' }, class: "btn btn-danger" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate @banners %>
    <% else %>
    <div>
      暂无内容
    </div>
    <% end %>
  </div>
</div>