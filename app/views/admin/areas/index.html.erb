<div class="row">
  <div class="col-xs-3"></div>
  <div class="col-xs-6"><h3 class="text-center">商品管理</h3></div>
  <div class="col-xs-3">
    <%= link_to '添加', new_admin_area_path, class: 'pull-right btn btn-warning', style: "margin-top: 10px;" %>
  </div>
  <div class="col-xs-12">
    <% if @areas.present? %>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>缩略图</th>
          <th>名称</th>
          <th>材质</th>
          <th>规格</th>
          <th>发行量</th>
          <th>详情</th>
          <th>操作</th>
        </tr>
      </thead>
      <tbody>
        <% @areas.each do |area| %>
        <tr>
          <td><%= image_tag area.image_url(:thumb) %></td>
          <td><%= area.title %></td>
          <td><%= area.material %></td>
          <td><%= area.standard %></td>
          <td><%= area.circulation %></td>
          <td><%= area.desc %></td>
          <td>
            <%= link_to '编辑', edit_admin_area_path(area), class: "btn btn-default" %>
            <%= link_to '删除', admin_area_path(area), method: :delete, data: { confirm: '确定删除吗?' }, class: "btn btn-danger" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate @areas %>
    <% else %>
    <div>
      暂无内容
    </div>
    <% end %>
  </div>
</div>